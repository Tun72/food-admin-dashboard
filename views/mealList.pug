extends base

block content
    .col-md-12
        // DATA TABLE
        .table-data__tool
            .table-data__tool-left
                .overview-wrap
                    h2.title-1= title
            .table-data__tool-right

        p.total= `Total User - ${total} `
    .table-responsive.table-responsive-data2
        table.table.table-data2
            thead
                tr
                    th No.
                    th name
                    th Meal Image
                    th category
                    th area
                    th instruction
                    th Meal Tags
                    th Ingredients
                    th
            tbody
                each meal, index in meals    
                    tr.tr-shadow
                        td= index  + 1
                        td= meal.strMeal
                        td
                            img(src=`${meal.strMealThumb}`, alt="", style="{width: 100px !important}")
                        td= meal.strCategory
                        td= meal.strArea 
                        td= meal.strInstructions.slice(0,40)+ "..."
                       
                        td= meal.strTags
                        td= meal.ingText
                        td= meal.meaText
                           
                                
                        td
                            .table-data-feature
                                a.item(data-toggle='tooltip' data-placement='top' title='Edit' href=`/admin/user-update/${user._id}`)
                                    i.zmdi.zmdi-edit
                                form(action='/admin/user-delete' method="post")
                                    input(type="hidden" value=`${user._id}` name="id")
                                    button.item(data-toggle='tooltip' data-placement='top' title='Delete' type="submit")
                                        i.zmdi.zmdi-delete

                    tr.spacer
